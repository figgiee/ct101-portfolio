<style>
  .study {
    max-width: 900px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  .study-header {
    margin-bottom: 4rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #ffffff10;
  }

  .study-header h1 {
    margin: 1rem 0;
  }

  .study-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    max-width: 600px;
  }

  /* Intro Grid */
  .intro-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
    align-items: start;
  }

  .intro-text {
    font-size: 1.15rem;
    line-height: 1.8;
    color: var(--color-text-muted);
  }

  .intro-stat {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-nuclear-yellow);
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
  }

  .stat-number {
    font-size: 4rem;
    font-weight: 700;
    color: var(--color-nuclear-yellow);
    line-height: 1;
  }

  .stat-label {
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-top: 0.5rem;
    color: var(--color-text);
  }

  .stat-desc {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin-top: 0.5rem;
  }

  /* Sections */
  .study-section {
    margin: 4rem 0;
  }

  .study-section h2 {
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--color-nuclear-yellow);
    display: inline-block;
  }

  .study-section p {
    font-size: 1.05rem;
    line-height: 1.8;
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
  }

  /* Comparison Cards */
  .comparison-cards {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-top: 2rem;
  }

  .comparison-card {
    background: var(--color-bg-secondary);
    border-radius: 12px;
    padding: 2rem;
    border: 1px solid #ffffff10;
  }

  .comparison-card.france {
    border-top: 3px solid var(--color-resistance-green);
  }

  .comparison-card.usa {
    border-top: 3px solid var(--color-danger);
  }

  .card-flag {
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-muted);
  }

  .card-stat {
    font-size: 3rem;
    font-weight: 700;
    margin: 0.5rem 0;
  }

  .france .card-stat { color: var(--color-resistance-green); }
  .usa .card-stat { color: var(--color-danger); }

  .card-label {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    margin-bottom: 1rem;
  }

  .comparison-card p {
    font-size: 0.9rem;
    margin: 0;
  }

  /* Artist Comparison */
  .artist-comparison {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin: 2rem 0;
  }

  .artist-card {
    background: var(--color-bg-secondary);
    border-radius: 12px;
    padding: 2rem;
    border: 1px solid #ffffff10;
  }

  .artist-card.lund {
    border-left: 3px solid var(--color-nuclear-yellow);
  }

  .artist-card.generation {
    border-left: 3px solid var(--color-accent);
  }

  .artist-card h3 {
    margin-bottom: 1rem;
  }

  .artist-quote blockquote {
    font-style: italic;
    color: var(--color-text-muted);
    padding-left: 1rem;
    border-left: 2px solid #ffffff20;
    margin: 1rem 0;
  }

  .artist-traits {
    list-style: none;
    font-size: 0.9rem;
  }

  .artist-traits li {
    padding: 0.5rem 0;
    border-bottom: 1px solid #ffffff08;
    color: var(--color-text-muted);
  }

  .artist-traits li:last-child {
    border-bottom: none;
  }

  .artist-traits strong {
    color: var(--color-text);
  }

  /* Insight Box */
  .insight-box {
    background: var(--color-accent-soft);
    border: 1px solid var(--color-accent);
    border-radius: 12px;
    padding: 2rem;
    margin-top: 2rem;
  }

  .insight-box h4 {
    color: var(--color-accent);
    margin-bottom: 0.75rem;
  }

  .insight-box p {
    margin: 0;
    font-size: 0.95rem;
  }

  /* Timeline */
  .fear-timeline {
    position: relative;
    padding-left: 2rem;
    margin: 2rem 0;
  }

  .fear-timeline::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(to bottom, var(--color-nuclear-yellow), var(--color-danger), var(--color-accent));
  }

  .timeline-item {
    position: relative;
    padding: 1.5rem 0 1.5rem 2rem;
  }

  .timeline-item::before {
    content: '';
    position: absolute;
    left: -2rem;
    top: 1.75rem;
    width: 12px;
    height: 12px;
    background: var(--color-bg);
    border: 2px solid var(--color-nuclear-yellow);
    border-radius: 50%;
    transform: translateX(-5px);
  }

  .timeline-year {
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-nuclear-yellow);
    margin-bottom: 0.5rem;
  }

  .timeline-content h4 {
    margin-bottom: 0.5rem;
  }

  .timeline-content p {
    font-size: 0.95rem;
    margin: 0;
  }

  /* Reflection */
  .reflection-content {
    font-size: 1.05rem;
    line-height: 1.9;
  }

  .pullquote {
    margin: 2rem 0;
    padding: 2rem;
    background: var(--color-bg-secondary);
    border-left: 4px solid var(--color-nuclear-yellow);
    border-radius: 0 12px 12px 0;
  }

  .pullquote p {
    font-size: 1.15rem;
    font-weight: 500;
    color: var(--color-text);
    margin: 0;
  }

  /* Conclusion */
  .conclusion-box {
    background: linear-gradient(135deg, var(--color-bg-secondary), #1a1a24);
    border: 1px solid #ffffff10;
    border-radius: 12px;
    padding: 2.5rem;
  }

  .conclusion-box p:last-child {
    margin-bottom: 0;
    font-size: 1.1rem;
    color: var(--color-text);
  }

  /* Navigation */
  .study-nav {
    display: flex;
    justify-content: space-between;
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid #ffffff10;
  }

  .study-nav a {
    display: block;
    padding: 1rem 1.5rem;
    background: var(--color-bg-secondary);
    border: 1px solid #ffffff10;
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .study-nav a:hover {
    border-color: var(--color-accent);
    transform: translateY(-2px);
  }

  .nav-label {
    display: block;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-muted);
  }

  .nav-title {
    display: block;
    font-weight: 600;
    color: var(--color-text);
    margin-top: 0.25rem;
  }

  .nav-next {
    text-align: right;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .intro-grid,
    .comparison-cards,
    .artist-comparison {
      grid-template-columns: 1fr;
    }

    .study-nav {
      flex-direction: column;
      gap: 1rem;
    }

    .nav-next {
      text-align: left;
    }
  }
</style>
